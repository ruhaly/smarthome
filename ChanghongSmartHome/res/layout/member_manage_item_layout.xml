<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/member_item_title_bg"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="2-1-1203"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_content_common" />

            <TextView
                android:id="@+id/tvSq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_shouquan"
                android:gravity="center"
                android:text="@string/shouquangei"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_content_common" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/member_item_gray_bg"
            android:orientation="vertical" >

            <com.changhong.sdk.widget.CustomGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/cacheColorHint"
                android:numColumns="4" >
            </com.changhong.sdk.widget.CustomGridView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>