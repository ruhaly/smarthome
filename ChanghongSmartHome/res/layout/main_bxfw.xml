<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/bx_half"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/bx_half_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108px"
            android:gravity="center"
            android:text="@string/bx_half_1_text"
            android:textColor="@color/color_5f5f5f"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bx_half_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:background="@drawable/bx_half_2"
            android:gravity="center" />

        <TextView
            android:id="@+id/bx_half_3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/bx_half_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67px"
            android:background="@drawable/bx_half_3"
            android:gravity="center" />


        <TextView
            android:id="@+id/bx_half_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67px"
            android:gravity="center"
            android:text="@string/bx_half_4_text"
            android:textColor="@color/color_5f5f5f"
            android:textSize="20sp" />

        <!--
             GridView
            android:id="@+id/bx_half_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_4"
            android:layout_marginTop="26.6dp"
            android:columnWidth="118dp"
            android:gravity="center"
            android:horizontalSpacing="2.6dp"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2.6dp" /
        -->

        <LinearLayout
            android:id="@+id/bx_half_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_4"
            android:layout_marginTop="40px"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b2" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b3" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b4" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/bx_half_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_5"
            android:layout_marginTop="2.66dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b6" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b7" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b8" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/bx_half_7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bx_half_6"
            android:layout_marginTop="2.66dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/b9" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b10" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b11" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.66dp"
                android:background="@drawable/b12" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bx_all_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/bxLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/bxfw_text"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@drawable/iconbg_select"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="@string/wyff_tab_1_group_1"
                android:textColor="@color/title_text_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/bx_expand1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/drawable_expand_open" />

            <com.changhong.sdk.widget.PullRefreshListView
                android:id="@+id/bxfwlist"
                android:layout_width="fill_parent"
                android:layout_height="390dp"
                android:layout_below="@id/bxfw_text"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:drawSelectorOnTop="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bx_layoutbt"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/title_bg" >

            <Button
                android:id="@+id/bx_button"
                android:layout_width="fill_parent"
                android:layout_height="55dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/bxtscommitbg"
                android:gravity="center"
                android:text="@string/wyff_tab_1_bnt"
                android:textColor="@color/title_text_white"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bxLayout_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bx_layoutbt"
            android:layout_below="@id/bxLayout" >

            <TextView
                android:id="@+id/bxfw_text_w"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@drawable/iconbg_unselect"
                android:gravity="center_vertical"
                android:paddingLeft="20dip"
                android:text="@string/wyff_tab_1_group_2"
                android:textColor="@color/title_text_black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/bx_expand2"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/drawable_expand_close" />

            <TextView
                android:id="@+id/bx_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:layout_toLeftOf="@id/bx_expand2"
                android:text="@string/wyff_tab_1_group_2_clear"
                android:textColor="@color/title_text_black"
                android:textSize="20sp" />

            <com.changhong.smarthome.phone.property.view.SwipeListView
                android:id="@+id/bxfwlist_w"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bxfw_text_w"
                android:background="@android:color/white"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>