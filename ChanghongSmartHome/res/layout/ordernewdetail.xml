<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:item="http://schemas.android.com/apk/res/com.changhong.smarthome.phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sub_sub_bg_color" >

    <com.changhong.smarthome.phone.store.activity.StoreTitleItem
        android:id="@+id/order_new_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        item:titlename="@string/order_detail_title" >
    </com.changhong.smarthome.phone.store.activity.StoreTitleItem>

    <ScrollView
        android:id="@+id/order_detail_ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_new_detail_title"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:id="@+id/order_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp" >

            <ImageView
                android:id="@+id/news_item_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="0dip"
                android:layout_marginTop="0dip"
                android:background="@drawable/changhong"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/shoping_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_item_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26.6dp"
                android:text="@string/shopping_detail_price"
                android:textColor="@color/red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shoping_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_item_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="26.6dp"
                android:layout_toRightOf="@+id/shoping_price"
                android:text="@string/shopping_detail_price_1"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/news_item_icon"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="26.6dp"
                android:layout_alignParentRight="true"
                android:text="@string/order_has_pay"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_detaol_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26.6dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/shoping_price"
                android:text="@string/order_detail_title"
                android:textColor="@color/shopping_detail_1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/shoping_price_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/order_detaol_info"
                android:layout_marginTop="5dp"
                android:background="@drawable/shopping_detail_line" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/shoping_price_line"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/order_new_detail_number"
                android:textColor="@color/title_text_color" />
            
            <TextView
                android:id="@+id/order_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shoping_price_line"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="123456789"
                android:textColor="@color/title_text_color" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/order_number"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/order_new_detail_date"
                android:textColor="@color/title_text_color" />
            
            
            <TextView
                android:id="@+id/order_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/order_number_value"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="2014-05-11"
                android:textColor="@color/title_text_color" />
            

            <TextView
                android:id="@+id/shopping_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:textSize="20sp"
                android:text="@string/order_shopping_detail"
                android:textColor="@color/shopping_detail_1" />
            
            <TextView
                android:id="@+id/shoping_price_line_1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_below="@+id/shopping_detail"
                android:layout_marginTop="5dp"
                android:background="@drawable/shopping_detail_line" />

            <TextView
                android:id="@+id/shoping_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/shoping_price_line_1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="赛江南"
                android:textColor="@color/shopping_detail_name"
                android:textSize="20sp" />
            
            <RatingBar
            android:id="@+id/order_star"
            style="@style/order_info_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@+id/shoping_price_line_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />

            <TextView
                android:id="@+id/shoping_detail"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/shoping_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/shopping_detail_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/shoping_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/shoping_detail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/shopping_detail_dese"
                android:textColor="@color/shopping_detail_1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/shoping_detail_1_value"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/shoping_detail_1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/shopping_detail_name"
                android:textSize="20sp" />

