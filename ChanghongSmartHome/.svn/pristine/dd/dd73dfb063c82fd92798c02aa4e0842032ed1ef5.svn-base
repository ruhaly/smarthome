<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <LinearLayout
            android:id="@+id/frameCitySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg_tip"
                android:textColor="@color/gray_5f5f5f"
                android:textSize="@dimen/font_36" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/page_bg"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_msgtype"
            android:textColor="@color/gray_919191"
            android:textSize="@dimen/font_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="10dp"
                    android:text="@string/repair"
                    android:textColor="@color/gray_5f5f5f"
                    android:textSize="@dimen/font_36" />

                <CheckBox
                    android:id="@+id/CheckBox01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="10dp"
                    android:text="@string/zhoubianshanquan"
                    android:textColor="@color/gray_5f5f5f"
                    android:textSize="@dimen/font_36" />

                <CheckBox
                    android:id="@+id/CheckBox02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="10dp"
                    android:text="@string/pay"
                    android:textColor="@color/gray_5f5f5f"
                    android:textSize="@dimen/font_36" />

                <CheckBox
                    android:id="@+id/CheckBox03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="10dp"
                    android:text="@string/tuangoupingdan"
                    android:textColor="@color/gray_5f5f5f"
                    android:textSize="@dimen/font_36" />

                <CheckBox
                    android:id="@+id/CheckBox04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:button="@drawable/checkbox_bg"
                    android:paddingLeft="10dp"
                    android:text="@string/sun_life"
                    android:textColor="@color/gray_5f5f5f"
                    android:textSize="@dimen/font_36" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>