<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <LinearLayout
            android:id="@+id/frameCitySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_info"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBack"
            style="@style/title_left_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_person_info_head_height"
        android:background="@drawable/personinfo_bg" >

        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:src="@drawable/personinf_head" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="6dp"
            android:text="@string/click_to_modify_head"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/font_size_content_common" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_info_item_height"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nickName"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" />

            <EditText
                android:id="@+id/etNickName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/color_Trans"
                android:gravity="right|center_vertical"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/personinfo_devider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_info_item_height"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/common_address"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:id="@+id/tvCommonAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/personinfo_devider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_info_item_height"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex_mine"
                android:textColor="@color/color_5f5f5f"
                android:textSize="@dimen/font_size_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right" >

                <TextView
                    android:id="@+id/tvSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lady"
                    android:textColor="@color/color_5f5f5f"
                    android:textSize="@dimen/font_size_title" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@drawable/personinfo_devider" />
    </LinearLayout>

</LinearLayout>