<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="13.3dip"
    android:paddingRight="13.3dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip" >

        <ImageView
            android:id="@+id/friend_icon"
            android:layout_width="@dimen/icon_height_small"
            android:layout_height="@dimen/icon_height_small"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/friend_icon"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/friend_icon"
            android:gravity="center"
            android:text="阿姨"
            android:textColor="@color/list_content_text_color"
            android:textSize="@dimen/pub_content_size" />

        <TextView
            android:id="@+id/friend_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_name"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/friend_icon"
            android:gravity="center"
            android:text="生日快乐！"
            android:textColor="@color/list_content_text_color"
            android:textSize="@dimen/list_date_size" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/friend_icon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/friend_icon"
            android:layout_marginRight="5dip"
            android:text="2014-01-06"
            android:textColor="@color/list_time_text_color"
            android:textSize="@dimen/list_date_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/diver_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/divider" />

</LinearLayout>