<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_Trans"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_title_bg"
            android:gravity="center"
            android:text="@string/authorization_to"
            android:textColor="@color/gray_5f5f5f"
            android:textSize="@dimen/font_36" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_content_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp" >

            <GridView
                android:id="@+id/gvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/cacheColorHint"
                android:listSelector="@color/color_Trans"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="20dp" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>