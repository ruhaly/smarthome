<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<!-- 主界面  gridview 的item -->
    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:background="@drawable/classify_content" >

        <ImageView
            android:id="@+id/exchangeimage"
            android:layout_width="match_parent"
            android:layout_height="148dip"
            android:layout_alignBottom="@+id/imageLayout"
            android:layout_margin="2dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLayout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exhange_name"
            style="@style/TextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="兑换10元电费" />

        <TextView
            android:id="@+id/exhange_intergration"
            style="@style/TextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="216积分" />
    </LinearLayout>

</RelativeLayout>