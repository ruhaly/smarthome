<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/bx_half"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bxLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bxfw_text"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:paddingLeft="20dip"
            android:background="@drawable/iconbg_select"
            android:gravity="center_vertical"
            android:text="@string/wyff_tab_1_group_1"
            android:textColor="@color/title_text_black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/bx_expand1"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/drawable_expand_open" />

        <com.changhong.smarthome.phone.property.view.SwipeListView
            android:id="@+id/bxfwlist"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_below="@id/bxfw_text"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bx_layoutbt"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iconbg" >

        <Button
            android:id="@+id/bx_button"
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/bxtscommitbg"
            android:gravity="center"
            android:text="@string/wyff_tab_1_bnt"
            android:textColor="@color/title_text_white"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bxLayout_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bx_layoutbt"
        android:layout_below="@id/bxLayout" >

        <TextView
            android:id="@+id/bxfw_text_w"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:paddingLeft="20dip"
            android:background="@drawable/iconbg_unselect"
            android:gravity="center_vertical"
            android:text="@string/wyff_tab_1_group_2"
            android:textColor="@color/title_text_black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/bx_expand2"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/drawable_expand_close" />

        <TextView
            android:id="@+id/bx_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:layout_toLeftOf="@id/bx_expand2"
            android:text="@string/wyff_tab_1_group_2_clear"
            android:textColor="@color/title_text_black"
            android:textSize="20sp" />

        <com.changhong.smarthome.phone.property.view.SwipeListView
            android:id="@+id/bxfwlist_w"
            android:layout_width="fill_parent"
            android:layout_height="350dip"
            android:layout_below="@id/bxfw_text_w"
            android:background="@android:color/white"
             android:cacheColorHint="#00000000"
            android:listSelector="#00000000" />
    </RelativeLayout>

</RelativeLayout>