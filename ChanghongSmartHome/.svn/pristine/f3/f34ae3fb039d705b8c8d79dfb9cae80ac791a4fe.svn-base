<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/pagerLayout"
        android:visibility="gone"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pagerImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
          >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_bxfwdelail"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/iconbg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/bx_detail_title"
            android:textColor="@color/title_text_black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/bx_lefttitle"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/textView1"
            android:layout_marginBottom="20dip"
            android:src="@drawable/drawable_expand_finish" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bxfwdelail" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/bx_fwjd0delail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detailred"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="@string/wyff_tab_1_group_p1"
                    android:textColor="@color/title_text_black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:gravity="bottom"
                    android:paddingLeft="20dip"
                    android:text="@string/bx_detail_wt"
                    android:textColor="@color/title_text_gay"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bx_textdelail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:textColor="@color/title_text_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bx_fwjddelail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/btn_bg"
                    android:paddingLeft="20dip"
                    android:text="@string/bx_detail_jd"
                    android:textColor="@color/title_text_gay"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/bx_detail_relative1"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="10dip" >

                    <ImageView
                        android:id="@+id/addImg"
                        android:layout_width="85dip"
                        android:layout_height="85dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/add_image" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip" >

                            <TextView
                                android:id="@+id/bx_time1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/title_text_black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/bx_time2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/title_text_black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/bx_time3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/title_text_black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/bx_time4"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/title_text_black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_marginTop="5dip" >

                            <ImageView
                                android:id="@+id/bx_imgview"
                                android:layout_width="wrap_content"
                                android:layout_height="23dip"
                                android:background="@drawable/progressbar1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dip" >

                            <TextView
                                android:id="@+id/bx_text1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="登记"
                                android:textColor="@color/title_text_gay"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/bx_text2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="受理"
                                android:textColor="@color/title_text_gay"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/bx_text3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="反馈"
                                android:textColor="@color/title_text_gay"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/bx_text4"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="评价"
                                android:textColor="@color/title_text_gay"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/bx_df"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="5dip"
                    android:paddingLeft="15dip"
                    android:text=""
                    android:textColor="@color/title_text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bx_lxfs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bx_fwjd0delail"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:paddingLeft="20dip"
                    android:text="@string/bx_detail_lxfs"
                    android:textColor="@color/title_text_gay"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/bx_detail_wxry"
                        android:textColor="@color/title_text_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/wxry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        android:textColor="@color/title_text_black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dip"
                        android:layout_weight="2"
                        android:text="@string/bx_detail_lxdh"
                        android:textColor="@color/title_text_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/wxryhm"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text=""
                        android:textColor="@color/title_text_black"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bx_pj"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/bx_lxfs"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_bg" >

                <TextView
                    android:id="@+id/fwpjm"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/detailred"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dip"
                    android:text="@string/bx_detail_fwpj"
                    android:textColor="@color/title_text_black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/bxfw_delailcontent"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_below="@id/fwpjm"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/bg_half"
                    android:gravity="top"
                    android:hint="@string/bx_detail_pl_hint"
                    android:maxLength="70"
                    android:maxLines="4"
                    android:textColorHint="@color/title_text_gay" />

                <LinearLayout
                    android:id="@+id/pj_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/bxfw_delailcontent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip" >

                    <RatingBar
                        android:id="@+id/rating"
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:max="5"
                        android:numStars="5"
                        android:progress="5"
                        android:rating="4"
                        android:stepSize="1" />

                    <RatingBar
                        android:id="@+id/ratinghide"
                        style="@style/roomRatingBarhide"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:max="5"
                        android:numStars="5"
                        android:progress="5"
                        android:rating="0"
                        android:stepSize="1"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bxfw_update"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:background="@drawable/pjbg"
                        android:gravity="center"
                        android:text="发表评论"
                        android:textColor="@color/title_text_white"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/bxfw_updatehide"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:background="@drawable/pjbg_black"
                        android:text="发表评论"
                        android:textColor="@color/title_text_white"
                        android:textSize="40px"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pj_layoutsure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/bxfw_delailcontent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <RatingBar
                        android:id="@+id/ratingsure"
                        style="@style/roomRatingBarhide"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginTop="5dip"
                        android:max="5"
                        android:numStars="5"
                        android:progress="5"
                        android:rating="4"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/bx_surepj"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:text=""
                        android:textColor="@color/title_text_black"
                        android:textSize="30px" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>