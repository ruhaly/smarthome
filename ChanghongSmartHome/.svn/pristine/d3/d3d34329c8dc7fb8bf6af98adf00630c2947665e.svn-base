 <!-- commondialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_ly"
    android:layout_width="270dip"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <LinearLayout
        android:id="@+id/commondialog_titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/commondialog_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/commondialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="提示"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
    <!-- 内容 -->

    <EditText
        android:id="@+id/edittext_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLength="128"
        android:visibility="gone" />

    <TextView
        android:id="@+id/commondialog_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确定退出应用程序？"
        android:textSize="20sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/commondialog_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/commondialog_ok_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="@string/dialog_ok"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/commondialog_cancel_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="@string/dialog_cancel"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/commondialog_ignore_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:text="@string/dialog_ignore"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>