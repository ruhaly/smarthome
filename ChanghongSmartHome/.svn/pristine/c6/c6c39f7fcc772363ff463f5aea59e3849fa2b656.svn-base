<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="13.3dip"
    android:paddingRight="13.3dip" >

    <LinearLayout
        android:id="@+id/left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="@dimen/icon_height_small"
            android:layout_height="@dimen/icon_height_small"
            android:src="@drawable/login_new_image" />

        <ImageView
            android:id="@+id/vertical_divider_iv"
            android:layout_width="wrap_content"
            android:layout_height="200dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/share_item_vertical_divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dip"
                android:scaleType="fitXY"
                android:text="下雪啦"
                android:textColor="@color/share_detail_title_color"
                android:textSize="@dimen/list_content_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_tv"
                android:layout_alignParentRight="true"
                android:text="下雪啦"
                android:textColor="@color/list_content_text_color" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/pic_iv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_02"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="top"
                    android:background="@drawable/tuangou_transparent_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="3dip"
                        android:gravity="center"
                        android:text="下雪啦"
                        android:textColor="@color/share_detail_title_color"
                        android:textSize="@dimen/list_content_size" />

                    <TextView
                        android:id="@+id/content_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="下雪啦"
                        android:textColor="@color/list_content_text_color"
                        android:textSize="@dimen/pub_title_size" />

                    <TextView
                        android:id="@+id/contact_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="center"
                        android:text="下雪啦"
                        android:textColor="@color/list_content_text_color"
                        android:textSize="@dimen/pub_title_size"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/staute_over_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:scaleType="fitXY"
                android:src="@drawable/statue_over"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>