<?xml version="1.0" encoding="utf-8"?>
<!-- 我积分兑换的物品的 item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/integration_bg1"
    android:orientation="horizontal"
    android:padding="20dip" >

    <ImageView
        android:id="@+id/goodsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@drawable/changhong" />

    <RelativeLayout
        android:id="@+id/hotRelative"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dip" >

        <TextView
            android:id="@+id/goodsName"
            style="@style/TextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:text="黄金脆皮级一份"
            android:textSize="20px" />

        <LinearLayout
            android:id="@+id/costintegtaionscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goodsName"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/needIntegration"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="1"
                android:text="25000" />

            <TextView
                android:id="@+id/textFen"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分" />
        </LinearLayout>

        <TextView
            android:id="@+id/textyouxiaoqi"
            style="@style/TextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_below="@id/costintegtaionscore"
            android:gravity="left"
            android:maxLines="1"
            android:text="有效期:" />

        <LinearLayout
            android:id="@+id/validityTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textyouxiaoqi"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/validityTimeFrom"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="2014.5.23" />

            <TextView
                android:id="@+id/textTo"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=" ~ " />

            <TextView
                android:id="@+id/validityTimeTo"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="2014.6.21" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>