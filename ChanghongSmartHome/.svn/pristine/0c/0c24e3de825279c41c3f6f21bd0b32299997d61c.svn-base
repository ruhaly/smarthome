<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <LinearLayout
            android:id="@+id/frameCitySelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_ipp"
                android:textColor="@color/gray_font"
                android:textSize="@dimen/font_36" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/page_bg"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bing_phone_bg"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/tvWhatIpp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/what_ipp"
                android:textColor="@color/red"
                android:textSize="@dimen/font_28" />

            <EditText
                android:id="@+id/editAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/modify_account_input"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/please_input_ipp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/gray_a8a8a8"
                android:textSize="@dimen/font_28" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/modify_account_input"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/please_input_pwd"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/gray_a8a8a8"
                    android:textSize="@dimen/font_28" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btnBind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_valicode_bg"
                android:text="@string/bind"
                android:textColor="@color/white"
                android:textSize="@dimen/font_28" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvForgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/forget_pwd"
            android:textColor="@color/red"
            android:textSize="@dimen/font_28" />

        <TextView
            android:id="@+id/tvNoIpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/no_ipp"
            android:textColor="@color/red"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

</LinearLayout>