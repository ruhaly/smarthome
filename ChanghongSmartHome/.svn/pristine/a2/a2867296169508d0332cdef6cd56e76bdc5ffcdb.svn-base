<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <ImageView
            android:id="@+id/imgBack"
            style="@style/title_left_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bind_phone"
            style="@style/title_center_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/page_bg"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bing_phone_bg"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip_modify_phone"
                android:textColor="@color/gray_a8a8a8"
                android:textSize="@dimen/font_size_content_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_phone"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_size_content_common" />

                <TextView
                    android:id="@+id/tvCurrentPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_28" />
            </LinearLayout>

            <EditText
                android:id="@+id/editAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/modify_account_input"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/please_input_phone"
                android:paddingLeft="5dp"
                android:textColorHint="@color/gray_a8a8a8"
                android:textSize="@dimen/font_size_content_common" >

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/tip_modify_accout_02"
                android:textColor="@color/gray_a8a8a8"
                android:textColorHint="@color/gray_a8a8a8"
                android:textSize="@dimen/font_size_content_common" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_valicode_bg"
                    android:hint="@string/please_input_valicode"
                    android:paddingLeft="5dp"
                    android:textColor="@color/gray_a8a8a8"
                    android:textColorHint="@color/gray_a8a8a8"
                    android:textSize="@dimen/font_size_content_common" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/star" />

                <Button
                    android:id="@+id/btnValicode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_valicode_bg"
                    android:text="@string/get_valicode"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_content_common" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_white_bg"
        android:gravity="center" >

        <Button
            android:id="@+id/btnBind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_valicode_bg"
            android:text="@string/bind"
            android:textColor="@color/white"
            android:textSize="@dimen/font_28" />
    </LinearLayout>

</LinearLayout>