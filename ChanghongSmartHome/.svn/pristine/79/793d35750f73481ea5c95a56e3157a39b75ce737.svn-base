<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/share_info_title_tv"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="center"
        android:background="@drawable/top_bg"
        android:gravity="center"
        android:text="@string/interact_share_share_info"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/title_size" />

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_info_title_tv"
        android:fillViewport="true"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/share_info_icon"
                        android:layout_width="@dimen/icon_height"
                        android:layout_height="@dimen/icon_height"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/share_info_content_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/list_content_size" />

                        <TextView
                            android:id="@+id/share_info_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/share_info_content_name"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/list_time_text_color" />

                        <TextView
                            android:id="@+id/share_info_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/share_info_content_name"
                            android:layout_marginTop="5dip"
                            android:textColor="@color/title_text_color"
                            android:textSize="@dimen/list_content_size" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/forward_white_bg"
                    android:orientation="vertical"
                    android:padding="10dip" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/origion_share_info_icon"
                            android:layout_width="@dimen/icon_height"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginRight="10dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/origional_share_info_content_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/title_text_color"
                                android:textSize="@dimen/list_content_size" />

                            <TextView
                                android:id="@+id/origion_share_info_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@+id/origional_share_info_content_name"
                                android:layout_marginTop="5dip"
                                android:textColor="@color/list_time_text_color" />

                            <TextView
                                android:id="@+id/share_info_content_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/origional_share_info_content_name"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:src="@drawable/divider" />

                    <TextView
                        android:id="@+id/origion_share_info_content_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:textColor="@color/title_text_color"
                        android:textSize="@dimen/list_content_size" />

                    <RelativeLayout
                        android:id="@+id/business_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/interact_share_share_info_sale" />

                            <TextView
                                android:id="@+id/original_price_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/interact_share_share_info_num" />

                            <TextView
                                android:id="@+id/original_num_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/activity_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/interact_share_start_time" />

                            <TextView
                                android:id="@+id/original_time_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dip" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/interact_share_end_time" />

                            <TextView
                                android:id="@+id/original_end_time_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/interact_share_place" />

                            <TextView
                                android:id="@+id/original_place_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dip"
                                android:gravity="center"
                                android:textColor="@color/red_color"
                                android:textSize="@dimen/list_content_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/contact_name" />

                        <TextView
                            android:id="@+id/original_contact_name_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dip"
                            android:gravity="center"
                            android:textColor="@color/red_color"
                            android:textSize="@dimen/list_content_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/contact_numb" />

                        <TextView
                            android:id="@+id/original_contact_numb_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dip"
                            android:gravity="center"
                            android:textColor="@color/red_color"
                            android:textSize="@dimen/list_content_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/original_pic_content"
                        android:layout_width="@dimen/pic_height_small"
                        android:layout_height="@dimen/pic_height_small"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:src="@drawable/picture" />

                    <TextView
                        android:id="@+id/original_forward_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13.3dip"
                    android:layout_marginTop="10dip" >

                    <LinearLayout
                        android:id="@+id/comment_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" >

                        <ImageView
                            android:id="@+id/comment_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dip"
                            android:src="@drawable/comment_iv" />

                        <TextView
                            android:id="@+id/comment_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/interact_share_comment"
                            android:textColor="@color/list_content_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/forward_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dip"
                        android:layout_toLeftOf="@+id/comment_ll" >

                        <ImageView
                            android:id="@+id/forward_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dip"
                            android:src="@drawable/forward_iv" />

                        <TextView
                            android:id="@+id/forward_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/interact_share_forward"
                            android:textColor="@color/list_content_text_color" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comment_bg" >

                <com.changhong.sdk.widget.InnerScrollViewPullRefreshListView
                    android:id="@+id/share_list"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dip"
                    android:cacheColorHint="#00000000"
                    android:divider="@null"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>