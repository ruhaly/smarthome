<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg" >

        <TextView
            style="@style/title_center_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_member" />

        <TextView
            android:id="@+id/tvClear"
            style="@style/title_right_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wyff_tab_1_group_2_clear" />

        <ImageView
            android:id="@+id/imgBack"
            style="@style/title_left_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:listSelector="@color/cacheColorHint"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

</LinearLayout>