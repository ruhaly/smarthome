<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/page_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <FrameLayout
                android:id="@+id/group_buy_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wei_life_iv_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tgpd_bg"
                    android:paddingLeft="6dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/tuangou_pingdan"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/et_text" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/last_share_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/textView1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="3dp"
                        android:text="拼单啦！金龙鱼大豆调和油，原价88/桶，现享团购价58/桶，量大从优，满100人，可以再享受9折优惠。"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_detail_size" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" >

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wei_life_iv_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/zbsq_bg"
                    android:paddingLeft="6dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/zhoubian_shanquan"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/et_text" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/last_share_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dip"
                        android:layout_toRightOf="@+id/textView3"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingLeft="3dp"
                        android:text="家乐福超市开业庆典，3.3-3.4两天，母婴类，居家类商品全场7折优惠，欢迎您的光临。"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_detail_size" />
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" >

                <FrameLayout
                    android:id="@+id/swap_space_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingRight="5dip" >

                    <ImageView
                        android:id="@+id/swap_space_bg_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wei_life_iv_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/picture" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/jhkj_bg"
                        android:paddingLeft="6dip"
                        android:paddingRight="10dip" >

                        <TextView
                            android:id="@+id/swap_space_ls"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="@string/jiaohuan_kongjian"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/et_text" />

                        <TextView
                            android:id="@+id/swap_space_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/last_share_height"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@+id/swap_space_ls"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="3dp"
                            android:text="@string/nothing"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_detail_size" />
                    </RelativeLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/sun_life_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingLeft="5dip" >

                    <ImageView
                        android:id="@+id/sun_life_bg_iv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wei_life_iv_height"
                        android:scaleType="fitXY"
                        android:src="@drawable/picture" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/ssh_bg"
                        android:paddingLeft="7dip"
                        android:paddingRight="10dip" >

                        <TextView
                            android:id="@+id/sun_life_ls"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="@string/shaishenghuo"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/et_text" />

                        <TextView
                            android:id="@+id/sun_life_tv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/last_share_height"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="10dip"
                            android:layout_toRightOf="@+id/sun_life_ls"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:paddingLeft="3dp"
                            android:text="@string/nothing"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_detail_size" />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvCinema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cimema_iv"
                    android:gravity="center" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/shequ_cinema"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>