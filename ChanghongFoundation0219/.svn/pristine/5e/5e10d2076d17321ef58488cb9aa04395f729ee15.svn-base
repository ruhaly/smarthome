            if (null != tempList)
            {
                cityMap.put(provinceTemp.getId(), tempList);
                handler.sendEmptyMessage(MsgWhat.MSGWHAT_GET_CITY_SUCCESS);
            }
            else
            {
                handler.sendEmptyMessage(MsgWhat.MSGWHAT_DATE_EMPTY);
            }
        }
